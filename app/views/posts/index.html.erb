
<h4>Listagem de postagens</h4>

<table class="table">
  <thead>
    <tr>
      <th width="1%"></th>
      <th width="40%">Título</th>
      <th>Descrição</th>
      <th>Tipo</th>
      <th colspan="3" width="1%"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><% if post.favorite %>
             <span class="fa-stack fa-1x text-warning">
               <i class="fa fa-star fa-stack-1x"></i>
            </span>
            <%end%>
        </td>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.type_post_humanize %></td>
        <td><%= link_to 'Ver', post %></td>
        <td><%= link_to 'Editar', edit_post_path(post) %></td>
        <td><%= link_to 'Apagar', post, method: :delete, data: { confirm: 'Confirma exclusão?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Postagem', new_post_path, class: "btn btn-success"%>