<%= simple_form_for(@post) do |f| %>
  <div class="row">
    <div class="col-md-7">
      <%= f.input :title %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <%= f.input :url %>
    </div>
    <div class="col-md-4">
    <%= f.input :type_post, collection: TypePost %>     </div>
  </div>
  <div class="row">
    <div class="col-md-7">
      <%= f.input :localization %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-7">
      <%= f.input :image1_url %>
    </div>
        <div class="col-md-7">
      <%= f.input :image2_url %>
    </div>
    <div class="col-md-7">
      <%= f.input :image3_url %>
    </div>
    <div class="col-md-7">
      <%= f.input :image4_url %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-7">
      <%= f.input :description, input_html: { cols: 50, rows: 10 } %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-7">
      <%= f.input :favorite %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit  class: "btn btn-success" %>
  </div>
<% end %>
